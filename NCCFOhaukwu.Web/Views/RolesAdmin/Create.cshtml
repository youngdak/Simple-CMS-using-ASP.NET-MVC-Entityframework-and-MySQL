@model NCCFOhaukwu.Web.Models.RoleViewModel

@{
    ViewBag.Title = "Roles Admin";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<h2>Add Role</h2>

<div class="col-md-6">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})

            <div class="form-group">
                @Html.LabelFor(model => model.Name, new {@class = "control-label"})
                <div class="">
                    @Html.TextBoxFor(model => model.Name, new {@class = "input-lg", data_validation = "required", data_validation_error_msg = "The role name field is required"})
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                <div class="">
                    <input type="submit" value="Add Role" class="btn btn-mod"/>
                </div>
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back to Roles</a>
            </div>
        </div>
    }
</div>