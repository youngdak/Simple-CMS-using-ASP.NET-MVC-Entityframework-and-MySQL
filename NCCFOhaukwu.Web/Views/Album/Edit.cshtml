@model NCCFOhaukwu.Web.Models.Albums

@{
    ViewBag.Title = "Edit Album";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<h2>Edit Album</h2>

<div class="col-md-6">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.DateCreated)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, new {@class = "control-label"})
                <div class="">
                    @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "input-lg", data_validation = "required", data_validation_error_msg = "The name field is required"}})
                    @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SubZone, new {@class = "control-label"})
                <div class="">
                    @Html.DropDownListFor(m => m.SubZone, Model.PpaTownList, "Select Sub Zone", new {@class = "input-lg", data_validation = "required", data_validation_error_msg = "The subzone field is required"})
                    @Html.ValidationMessageFor(m => m.SubZone, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="">
                    <input type="submit" value="Update Album" class="btn btn-mod"/>
                </div>
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back to Albums</a>
            </div>
        </div>
    }

</div>