@model DAL.Album

@{
    ViewBag.Title = "Delete Album";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<h2>Delete Album</h2>

<h3>Are you sure you want to delete this?</h3>
<h4 class="alert-danger">Deleting this will delete all album pictures</h4>
<div>
    <hr/>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SubZone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubZone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateModified)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateModified)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete Album" class="btn btn-mod"/> <br/><br/>
            <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back to Albums</a>
        </div>
    }
</div>