@model IEnumerable<DAL.CorpMember>
@{
    ViewBag.Title = "Birthdays";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}


<div class="row general whoweare">
    <div class="col-md-3 col-md-push-9">
        <div class="row static-search">
            <div class="container-fluid">
                <div>
                    <label class="control-label">Filter:</label>
                </div>
                @using (Html.BeginForm("Birthdays", "Events", FormMethod.Get))
                {
                    <div class="form-horizontal container-fluid">
                        <div class="form-group">
                            <div>
                                <label class="control-label">Sub Zone</label>
                                @Html.DropDownList("subzone", null, new {@class = "input-sm"})
                            </div>
                        </div>
                        <div class="form-group">
                            <div>
                                <label class="control-label">Birthday Month</label>
                                @Html.DropDownList("month", null, new {@class = "input-sm"})
                            </div>
                        </div>
                        <div class="form-group">
                            <div>
                                <input type="submit" value="Search" class="btn btn-mod-sm"/>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-9 col-md-pull-3 span-center-left">
        <span class="container">Birthdays in @ViewBag.selectedMonth</span>
        @{
            Html.RenderPartial("_EventPartial", Model);
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}