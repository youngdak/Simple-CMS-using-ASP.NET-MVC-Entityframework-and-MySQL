@model DAL.AlbumPhoto

@{
    ViewBag.Title = "Delete Album Photo";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<h2>Delete Album Photo</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Album.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Album.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateModified)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateModified)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Photo)
        </dt>

        <dd>
            <div class="">
                @if (Model.Photo != null)
                {
                    <img src="~/Images/AlbumPhoto/@Model.Id" class="img-responsive" style="height: 100px; width: 100px;"/>
                }
                else
                {
                    <img src="~/img/no-passport.png" class="img-responsive img-thumbnail"/>
                }
            </div>
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete Album Photo" class="btn btn-mod"/> <br/><br/>
            <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back to Album Photos</a>
        </div>
    }
</div>