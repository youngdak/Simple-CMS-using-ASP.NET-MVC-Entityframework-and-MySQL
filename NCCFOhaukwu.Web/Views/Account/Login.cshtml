@model NCCFOhaukwu.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<h2>Login</h2>

<div class="col-md-6">
    @using (Html.BeginForm("Login", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new {@class = "control-label"})
                <div class="">
                    @Html.TextBoxFor(m => m.Email, new { @class = "input-lg", data_validation = "email required", data_validation_error_msg = "The email field is required and is not valid" })
                    @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new {@class = "control-label"})
                <div class="">
                    @Html.PasswordFor(m => m.Password, new {@class = "input-lg", data_validation = "length", data_validation_length = "min6", data_validation_error_msg = "password must not be less than 6 characters"})
                    @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="">
                    <div class="">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="">
                    <a href="@Url.Action("ForgotPassword")">Forgot Password?</a>
                </div>
            </div>

            <div class="form-group">
                <div class="">
                    <input type="submit" value="Lgoin" class="btn btn-mod"/>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}