@model MySql.BLL.ApplicationUser

@{
    ViewBag.Title = "User Details";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<h2>User Details</h2>

<div>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<h4>List of roles for this user</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <hr/>
    <p>No roles found for this user.</p>
}

<table class="table table-striped">

    @foreach (var item in ViewBag.RoleNames)
    {
        <tr>
            <td>
                @item
            </td>
        </tr>
    }
</table>
<div class="form-group">
    <a href="@Url.Action("Edit", "UsersAdmin", new {id = Model.Id})" class="btn btn-primary"><i class="fa fa-edit"></i> Edit User</a><br/><br/>
    <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back to Users</a>
</div>