@model DAL.News

@{
    ViewBag.Title = "Delete News";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<h2>Delete News</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Author.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Photo)
        </dt>

        <dd>
            <div class="">
                @if (Model.Photo != null)
                {
                    <img src="~/Images/NewsPhoto/@Model.Id" class="img-responsive img-thumbnail" style="height: 100px; width: 100px;"/>
                }
                else
                {
                    <img src="~/img/no-passport.png" class="img-responsive img-thumbnail"/>
                }
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TheNews)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TheNews)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateModified)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateModified)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete News" class="btn btn-mod"/> <br/><br/>
            <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back to News</a>
        </div>
    }
</div>