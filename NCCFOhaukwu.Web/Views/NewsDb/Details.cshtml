@model DAL.News

@{
    ViewBag.Title = "News Details";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<h2>News Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Author.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Photo)
        </dt>

        <dd>
            <div class="">
                @if (Model.Photo != null)
                {
                    <img src="~/Images/NewsPhoto/@Model.Id" class="img-responsive img-thumbnail" style="height: 100px; width: 100px;"/>
                }
                else
                {
                    <img src="~/img/no-passport.png" class="img-responsive img-thumbnail"/>
                }
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TheNews)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TheNews)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateModified)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateModified)
        </dd>

    </dl>
</div>
<div class="form-group">
    <a href="@Url.Action("Edit", "NewsDb", new {id = Model.Id})" class="btn btn-primary"><i class="fa fa-edit"></i> Edit News</a><br/><br/>
    <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back to News</a>
</div>