@model IEnumerable<DAL.Carousel>

@{
    ViewBag.Title = "Add Carousel";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<h2>Add Carousel</h2>

<p>
    @Html.ActionLink("Add New Carousel", "Create", null, new {@class = "btn btn-primary"})
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Img)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContentType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <div class="">
                    @if (item.Img != null)
                    {
                        <img src="~/Images/CarouselImg/@item.Id" class="img-responsive img-thumbnail" style="height: 100px; width: 100px;"/>
                    }
                    else
                    {
                        <img src="~/img/no-passport.png" class="img-responsive img-thumbnail"/>
                    }
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContentType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
        </tr>
    }

</table>