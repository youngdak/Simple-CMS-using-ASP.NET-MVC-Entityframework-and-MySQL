    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<h2>Portfolio Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Position)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position)
