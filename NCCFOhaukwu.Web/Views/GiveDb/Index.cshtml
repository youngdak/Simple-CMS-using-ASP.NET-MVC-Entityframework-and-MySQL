@model IEnumerable<DAL.Give>

@{
    ViewBag.Title = "Give";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<h2>Give</h2>
<p>
    @Html.ActionLink("Add New Give", "Create", null, new {@class = "btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Donate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        var Donate = (item.Donate.Length >= 50) ? item.Donate.Substring(0, 150) : item.Donate;
        <tr>
            <td>
                @Html.Raw(Donate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
        </tr>
    }

</table>