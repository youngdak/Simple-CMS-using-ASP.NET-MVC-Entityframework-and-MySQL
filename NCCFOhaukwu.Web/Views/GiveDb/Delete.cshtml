@model DAL.Give

@{
    ViewBag.Title = "Delete Give";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<h2>Delete Give</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Donate)
        </dt>

        <dd>
            @Html.Raw(Model.Donate)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete Give" class="btn btn-mod"/> <br/><br/>
            <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back to Give</a>
        </div>
    }
</div>