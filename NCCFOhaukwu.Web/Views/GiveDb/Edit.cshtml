@model NCCFOhaukwu.Web.Models.GiveModel

@{
    ViewBag.Title = "Edit Give";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}


<h2>Edit Give</h2>

<div class="col-md-8">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Donate, new {@class = "control-label"})
                <div>
                    @Html.TextAreaFor(model => model.Donate, new { htmlAttributes = new { @class = "input-lg" } })
                    @Html.ValidationMessageFor(model => model.Donate, "", new {@class = "text-danger"})
                </div>
            </div>


            <div class="form-group">
                <div class="">
                    <input type="submit" value="Update Give" class="btn btn-mod"/>
                </div>
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back to Give</a>
            </div>
        </div>
    }
</div>